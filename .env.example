# Copy this file to .env and fill in real values

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-key
PANDASAI_LLM_MODEL=gpt-5.1-mini

# Upload Settings
UPLOAD_MAX_MB=25

# Microsoft Graph / OneDrive Configuration (Optional)
# Use the SAME credentials as your AppV3 project
# Leave these blank to use file upload mode only
MS_TENANT_ID=your_tenant_id_here
MS_CLIENT_ID=your_client_id_here
MS_CLIENT_SECRET=your_client_secret_here
ONEDRIVE_DRIVE_ID=your_drive_id_here
ONEDRIVE_ROOT_PATH=Folder/SubFolder Name

# Debug Mode (optional)
DEBUG_MODE=false
