# Copy this file to .env and fill in real values

# ======================
# Required API Keys
# ======================
# OpenAI API Key - Required for PandasAI data analysis
OPENAI_API_KEY=sk-your-openai-key

# Google API Key - Required for chat title generation, embeddings, document processing
GOOGLE_API_KEY=your-google-api-key

# LLM Model for PandasAI (optional - defaults to gpt-4o-mini)
PANDASAI_LLM_MODEL=gpt-4o-mini

# ======================
# Upload Settings
# ======================
UPLOAD_MAX_MB=25

# ======================
# Microsoft OneDrive (Optional)
# ======================
# Leave blank to disable OneDrive integration
MS_TENANT_ID=
MS_CLIENT_ID=
MS_CLIENT_SECRET=
ONEDRIVE_DRIVE_ID=
ONEDRIVE_ROOT_PATH=

# ======================
# Debug
# ======================
DEBUG_MODE=false

# ======================
# Security
# ======================
# CRITICAL: Change this in production!
JWT_SECRET_KEY=change-this-to-a-strong-random-32-character-string

# ======================
# Redis (Job Queue)
# ======================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ======================
# Job Manager
# ======================
JOB_MAX_WORKERS=2
